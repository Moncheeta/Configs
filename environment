# default programs
EDITOR DEFAULT="nvim"
BROWSER DEFAULT="firefox"

# scripts
PATH DEFAULT=${PATH}:@{HOME}/scripts

# xdg
PROGRAM_DATA DEFAULT=@{HOME}/program
CONFIG_HOME DEFAULT=${PROGRAM_DATA}/config
XDG_CONFIG_HOME DEFAULT=${CONFIG_HOME}
DATA_HOME DEFAULT=${PROGRAM_DATA}/data
XDG_DATA_HOME DEFAULT=${DATA_HOME}
CACHE_HOME DEFAULT=${PROGRAM_DATA}/cache
XDG_CACHE_HOME DEFAULT=${CACHE_HOME}
STATE_HOME DEFAULT=${PROGRAM_DATA}/state
XDG_STATE_HOME DEFAULT=${STATE_HOME}

# bash
HISTFILE DEFAULT=${DATA_HOME}/bash/history

# less
LESSHISTFILE DEFAULT=${DATA_HOME}/less/history

# calc
CALCHISTFILE DEFAULT=${DATA_HOME}/calc/history

# gpg
GNUPGHOME DEFAULT=${DATA_HOME}/gnupg

# pass
PASSWORD_STORE_DIR DEFAULT=${DATA_HOME}/password-store

# git
GIT_CONFIG_GLOBAL DEFAULT=${CONFIG_HOME}/git/config

# zig
PATH DEFAULT=${PATH}:@{HOME}/src/zig-bootstrap/out/zig-native-linux-gnu-native

# c/c++
CCACHE_DIR=/var/cache/ccache
PATH DEFAULT=${CCACHE_DIR}/bin:${PATH}

# cargo
CARGO_HOME DEFAULT=${DATA_HOME}/cargo
PATH DEFAULT=${PATH}:${CARGO_HOME}/bin

# go
GOPATH DEFAULT=${DATA_HOME}/go
PATH DEFAULT=${PATH}:${GOPATH}/bin

# wakatime
WAKATIME_HOME DEFAULT=${DATA_HOME}/wakatime

